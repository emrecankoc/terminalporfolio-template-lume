{% import "commons.njk" as commons %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="language" content="English"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <link href="styles/mainstyles.css" rel="stylesheet"/>
    <title>{{ title }}</title>
  </head>
  <body>
    <div class="bg-slate-900 h-full">
      <div class="container mx-auto px-4 py-12">
        <div class="rounded-lg bg-gray-800 p-2 rounded-none border-2 border-gray-700">
          <div class="flex items-center justify-end px-4 py-2">
            <button class="text-gray-500 hover:text-gray-400 focus:outline-none">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="h-4 w-4 fill-current">
                <!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path d="M32 416c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H32z"/>
              </svg>
            </button>
            <button class="mx-3 text-gray-500 hover:text-gray-400 focus:outline-none">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="h-4 w-4 fill-current">
                <!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path d="M.3 89.5C.1 91.6 0 93.8 0 96V224 416c0 35.3 28.7 64 64 64l384 0c35.3 0 64-28.7 64-64V224 96c0-35.3-28.7-64-64-64H64c-2.2 0-4.4 .1-6.5 .3c-9.2 .9-17.8 3.8-25.5 8.2C21.8 46.5 13.4 55.1 7.7 65.5c-3.9 7.3-6.5 15.4-7.4 24zM48 224H464l0 192c0 8.8-7.2 16-16 16L64 432c-8.8 0-16-7.2-16-16l0-192z"/>
              </svg>
            </button>
            <button class="text-red-500 hover:text-red-400 focus:outline-none">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="h-4 w-4 fill-current">
                <!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/>
              </svg>
            </button>
          </div>

          <div class="font-normal font-sans antialiased text-gray-300 mb-4 rounded-lg bg-slate-900 py-10 px-5">
            {{ commons.commandblock("cat welcome.txt") }}
            <div class="my-5">
              {{ welcomeText }}
            </div>
            {{ commons.commandblock("neofetch") }}
            <div class="grid md:grid-cols-2 grid-cols-1 my-5">
              <div class="my-5">
                <img src="https://xsgames.co/randomusers/assets/avatars/pixel/11.jpg" class="rounded-[50%] m-auto h-60"/>
              </div>
              <div>
                <p>
                  <span class="text-yellow-200 mr-1">Name</span>
                  {{ name }}</p>
                <p>
                  <span class="text-yellow-200 mr-1">Education</span>{{ education }}</p>
                <p>
                  <span class="text-yellow-200 mr-1">Major</span>{{ major }}</p>
                <p>
                  <span class="text-yellow-200 mr-1">Github</span>
                  <a href={{ githubLink }}>{{ githubText }}</a>
                </p>
                <p>
                  <span class="text-yellow-200 mr-1">Medium</span>
                  <a href={{mediumLink}}>{{ mediumText }}</a>
                </p>
                <p>
                  <span class="text-yellow-200 mr-1">Techstack</span></p>
                <ul class="list-disc ml-5">
                  {% for item in techstacks %}
                    <li>{{ item }}</li>
                  {% endfor %}
                </ul>
                <p>
                  <span class="text-yellow-200 mr-1">Experiences</span>
                  <ul class="list-disc ml-5">
                    {% for item in experiences %}
                      <li>{{ item }}</li>
                    {% endfor %}
                  </ul>
                </p>
              </div>
            </div>
            {{ commons.commandblock("who") }}
            <div class="my-5 leading-relaxed">
              {{ content | safe }}
            </div>
            {{ commons.commandblock("ls ./blogs") }}
            <div class="my-5">
              <ul>
                {% for item in blogs %}
                  <li class="my-2">
                    <p>
                      <b>{{item.title}}</b>
                    </p>
                    <p>{{item.desc}}</p>
                    <a href="{{item.link}}" class="ml-1 text-sky-500">read</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
            {{ commons.commandblock("contact") }}
            <div class="my-5">
              <form>
                <div class="flex">
                  <span class="text-purple-400">@</span>
                  <input name="email" id="email" type="email" class="ml-2 flex-1 border-none bg-transparent focus:outline-none" placeholder="Your Email" required/>
                </div>
                <div class="flex">
                  <span class="text-purple-400">M</span>
                  <textarea name="message" id="message" rows="8" class="ml-2 flex-1 border-none bg-transparent focus:outline-none resize-none" placeholder="Write your message here..." required></textarea>
                </div>
                <div>
                  <button type="submit" class="text-white border border-purple-700 hover:bg-purple-800 focus:ring-4 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Send</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <footer class="text-center text-white pb-10">
      Template based on <a class="text-sky-500" href="https://github.com/emrecankoc/terminalporfolio-template-lume">github.com/emrecankoc/terminal-portfolio-template</a>
      </footer>
    </div>

  </body>
</html>